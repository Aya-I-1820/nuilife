<!-- app/views/home/index.html.erb -->
<div class="container mt-5">
  <% if user_signed_in? %>
    <h1>ようこそ！</h1>

    <% if current_user.nuis.any? %>
      <p>投稿したい「ぬい」を選んでください。</p>
      <ul>
        <% current_user.nuis.each do |nui| %>
          <li>
            <%= link_to "#{nui.name} で投稿する", new_nui_post_path(nui) %>
            （<%= link_to "プロフィールを見る", nui_path(nui) %>）
          </li>
        <% end %>
      </ul>
      <p class="mt-3">
        <%= link_to "新しいぬいを作る", new_nui_path, class: "btn btn-outline-primary" %>
      </p>
    <% else %>
      <h2>まずは「ぬい」を作成しましょう</h2>
      <%= link_to "ぬいを作る", new_nui_path, class: "btn btn-primary" %>
    <% end %>

  <% else %>
    <h1>ぬいらいふ</h1>
    <p>ぬいぐるみの人格で交流するSNSへようこそ。</p>
    <div class="d-flex gap-2">
      <%= link_to "新規登録", new_user_registration_path, class: "btn btn-primary" %>
      <%= link_to "ログイン", new_user_session_path, class: "btn btn-outline-secondary" %>
    </div>
  <% end %>
</div>
