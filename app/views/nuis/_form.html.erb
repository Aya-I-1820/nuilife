<%= form_with model: @nui, local: true do |f| %>
  <% if @nui.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @nui.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "ぬいの名前" %>
    <%= f.text_field :name, class: "form-control", required: true, maxlength: 30 %>
  </div>

  <div class="mb-3">
    <%= f.label :profile, "プロフィール" %>
    <%= f.text_area :profile, rows: 4, class: "form-control", maxlength: 300,
                    placeholder: "性格や設定など" %>
  </div>

  <div class="mb-3">
    <%= f.label :avatar, "アイコン画像" %>
    <%= f.file_field :avatar, accept: "image/png,image/jpeg,image/webp", class: "form-control" %>

    <% if @nui.avatar.attached? %>
      <div class="mt-2 d-flex align-items-center gap-3">
        <%= avatar_for(@nui, size: 96) %>
        <label class="form-check-label">
          <%= check_box_tag :remove_avatar, "1", false, class: "form-check-input me-1" %>
          画像を削除する
        </label>
      </div>
    <% end %>
  </div>

  <div class="d-flex gap-2">
    <%= f.submit (@nui.persisted? ? "更新する" : "作成する"), class: "btn btn-primary" %>
    <%= link_to "キャンセル", (@nui.persisted? ? @nui : root_path), class: "btn btn-outline-secondary" %>
  </div>
<% end %>
