<!-- app/views/nuis/followers.html.erb -->
<div class="container py-4">
  <h1 class="h5 mb-3"><%= @nui.name %> のフォロワー</h1>

  <div class="mb-3 text-muted">
    フォロワー数：<strong><%= @nui.respond_to?(:followers_count) ? @nui.followers_count : @nui.followers.count %></strong>
  </div>

  <% if @follows.any? %>
    <div class="vstack gap-2">
      <% @follows.each do |follow| %>
        <% user = follow.user %>
        <div class="card p-3">
          <div class="fw-semibold"><%= user.try(:name).presence || user.email %></div>
          <div class="text-muted small">フォロー日時：<%= l(follow.created_at, format: :short) rescue follow.created_at.to_s(:short) %></div>
        </div>
      <% end %>
    </div>
  <% else %>
    <p class="text-muted">まだフォロワーはいません。</p>
  <% end %>

  <div class="mt-3"><%= link_to "← ぬいのプロフィールへ戻る", @nui %></div>
</div>
