<h1>ぬいを作る</h1>

<%= form_with model: @nui, local: true do |f| %>
  <% if @nui.errors.any? %>
    <div class="alert alert-danger">
      <ul>
        <% @nui.errors.full_messages.each do |m| %>
          <li><%= m %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= f.label :name, "ぬいの名前" %>
    <%= f.text_field :name, class: "form-control", required: true %>
  </div>

  <div class="mb-3">
    <%= f.label :profile, "プロフィール" %>
    <%= f.text_area :profile, rows: 4, class: "form-control", placeholder: "性格や設定など" %>
  </div>

  <div class="mb-3">
    <%= f.label :avatar, "アイコン画像" %>
    <%= f.file_field :avatar, accept: "image/png,image/jpeg,image/webp", class: "form-control" %>
    <% if @nui.avatar.attached? %>
      <div class="mt-2">
        <%= image_tag @nui.avatar.variant(resize_to_fill: [128, 128]), class: "rounded-circle" %>
      </div>
    <% end %>
  </div>

  <%= f.submit "作成する", class: "btn btn-primary" %>
  <%= link_to "キャンセル", root_path, class: "btn btn-link" %>
<% end %>
