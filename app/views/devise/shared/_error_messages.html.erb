<!-- app/views/devise/shared/_error_messages.html.erb -->
<% if resource.errors.any? %>
  <div class="alert alert-danger error-messages-narrow">
    <p class="fw-bold mb-2">入力内容を確認してください（<%= resource.errors.count %>件）</p>
    <ul class="mb-0">
      <% resource.errors.full_messages.each do |msg| %>
        <li><%= msg %></li>
      <% end %>
    </ul>
  </div>
<% end %>
