<!-- app/views/posts/drafts.html.erb -->
<div class="container py-4">
  <h1 class="h5 mb-3"><%= @nui.name %> の下書き一覧</h1>

  <% if @posts.any? %>
    <div class="vstack gap-3">
      <% @posts.each do |post| %>
        <div class="post-narrow">
          <div class="card p-3 border-secondary-subtle">
            <div class="d-flex align-items-center gap-2 mb-2">
              <%= nui_avatar_tag(@nui, size: 32) %>
              <div class="small text-muted">
                更新: <%= short_time(post.updated_at) %>
                <span class="badge text-bg-secondary ms-2">下書き</span>
              </div>
            </div>

            <% if post.post.present? %>
              <p class="mb-2"><%= simple_format(h(post.post)) %></p>
            <% end %>

            <% if post.image&.attached? %>
              <div class="mb-2">
                <%= image_tag post.image.variant(resize_to_limit: [600, 600]).processed,
                              class: "img-fluid rounded" %>
              </div>
            <% end %>

            <div class="d-flex gap-2">
              <%= link_to "編集", edit_nui_post_path(@nui, post),
                          class: "btn btn-sm btn-outline-secondary" %>
              <%= button_to "削除", nui_post_path(@nui, post),
                            method: :delete,
                            data: { turbo_confirm: "この下書きを削除します。よろしいですか？" },
                            class: "btn btn-sm btn-danger ms-auto" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
    <div class="mt-3"><%= paginate @posts %></div>
  <% else %>
    <p class="text-muted">下書きはありません。</p>
  <% end %>

  <div class="mt-3">
    <%= link_to "← 新規投稿へ", new_nui_post_path(@nui) %>
  </div>
</div>
