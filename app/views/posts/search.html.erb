<!-- app/views/posts/search.html.erb -->
<div class="container py-2">
  <div class="post-narrow">
    <h1 class="h5 mb-3">検索結果</h1>
    <% if @q.present? %>
      <p class="text-muted small mb-3">キーワード: 「<%= h @q %>」</p>
    <% end %>

    <% if @posts.any? %>
      <div class="vstack gap-3">
        <% @posts.each do |post| %>
          <%= render "posts/post_card", post: post %>
        <% end %>
      </div>
      <div class="mt-3">
        <%= paginate @posts, params: { q: @q } %>
      </div>
    <% else %>
      <p class="text-muted">該当する投稿は見つかりませんでした。</p>
    <% end %>
  </div>
</div>
